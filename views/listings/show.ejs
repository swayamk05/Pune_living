<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Corrected variable to singular 'listing' -->
    <title><%= listing.title %></title>
    <!-- Bootstrap CSS for Carousel and Styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <%- include('../includes/navbar.ejs') %>
    
    <main class="container">
        <%- include('../includes/flash.ejs') %>

        <h1 class="page-title"><%= listing.title %></h1>
        
        <div class="show-card">
            
            <!-- Bootstrap Carousel for Multiple Images -->
            <div id="listingCarousel" class="carousel slide" data-bs-ride="carousel">
                <!-- Carousel Indicators -->
                <% if (listing.images.length > 1) { %>
                    <div class="carousel-indicators">
                        <% listing.images.forEach((image, i) => { %>
                            <button type="button" data-bs-target="#listingCarousel" data-bs-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>" aria-current="true" aria-label="Slide <%= i + 1 %>"></button>
                        <% }); %>
                    </div>
                <% } %>
    
                <!-- Carousel Slides -->
                <div class="carousel-inner">
                    <% listing.images.forEach((image, i) => { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <img src="<%= image.url.replace('/upload', '/upload/w_800,h_600,c_fill') %>" class="d-block w-100 show-img" alt="Image of <%= listing.title %>">
                    </div>
                    <% }); %>
                </div>
    
                <!-- Manual Controls -->
                <% if (listing.images.length > 1) { %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#listingCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#listingCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                <% } %>
            </div>

            <div class="show-card-info">
                <h2><%= listing.title %></h2>

                <% if (listing.owner) { %>
                  <p>Owned by: <strong><%= listing.owner.username %></strong></p>
                <% } %>

                <p class="description"><%= listing.description %></p>
                
                <ul class="info-list">
                    <li>₹<%= listing.price.toLocaleString("en-IN") %> / night</li>
                    <li><%= listing.location %></li>
                    <li><%= listing.country %></li> 
                </ul>

                <% if(currentUser && listing.owner && listing.owner.equals(currentUser._id)) { %>
                <div class="action-buttons">
                    <a href="/listings/<%= listing._id %>/edit" class="btn-primary">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn-dark">Delete</button>
                    </form>
                </div>
                <% } %>
                <hr>

                <% if(currentUser) { %>
                <div class="review-form-container">
                    <h4>Leave a Review</h4>
                    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="review-form">
                        <div class="form-group rating-group">
                            <label for="rating">Rating</label>
                            <div class="star-rating">
                                <input type="radio" id="star5" name="review[rating]" value="5" /><label for="star5" title="5 stars">★</label>
                                <input type="radio" id="star4" name="review[rating]" value="4" /><label for="star4" title="4 stars">★</label>
                                <input type="radio" id="star3" name="review[rating]" value="3" /><label for="star3" title="3 stars">★</label>
                                <input type="radio" id="star2" name="review[rating]" value="2" /><label for="star2" title="2 stars">★</label>
                                <input type="radio" id="star1" name="review[rating]" value="1" /><label for="star1" title="1 star">★</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="comment">Comment</label>
                            <textarea id="comment" name="review[comment]" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn-primary">Submit Review</button>
                    </form>
                </div>
                <% } %>

                <div class="reviews-container">
                    <h4>All Reviews</h4>
                    <% if(listing.reviews && listing.reviews.length > 0) { %>
                        <% for(let review of listing.reviews) { %>
                            <div class="review-card">
                                <div class="review-card-body">
                                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                    <% if (review.author) { %>
                                        <h5 class="review-author">@<%= review.author.username %></h5>
                                    <% } %>
                                    <p class="review-comment"><%= review.comment %></p>
                                </div>
                                
                                <% if(currentUser && review.author && review.author.equals(currentUser._id)) { %>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button class="review-delete-btn">Delete</button>
                                    </form>
                                <% } %>
                            </div>
                        <% } %>
                    <% } else { %>
                        <p>No reviews yet. Be the first to leave a review!</p>
                    <% } %>
                </div>

            </div>
        </div>
    </main>

    <%- include('../includes/footer.ejs') %>
    
    <!-- Bootstrap JS for Carousel functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

